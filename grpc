---
- name : download grpc-package
  command : curl -OL https://github.com/google/protobuf/releases/download/v3.2.0/protoc-3.2.0-linux-x86_64.zip

- name : Install Unzip tool
  apt :
     name : unzip
     state : present

- name : unzip downloaded package
  unarchive :
          src : protoc-3.2.0-linux-x86_64.zip
          dest : .
          remote_src : yes

- name : move protoc to /usr/local/bin
  command : mv bin/ /usr/local/bin/

- name : move protoc3/include to /usr/local/include
  command : mv include/ /usr/local/include/
